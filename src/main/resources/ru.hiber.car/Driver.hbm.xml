<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.hiber.car">

    <class name="Driver" table="drivers">
        <id name="id" column="DRIVER_ID" type="int">
            <generator class="increment"/>
        </id>
        <property name="name" column="NAME" type="java.lang.String"/>

        <set name="cars" table="History" lazy="true" fetch="select">
            <key column="driver_id" not-null="true"/>
            <many-to-many entity-name="ru.hiber.car.Car">
                <column name="car_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>

</hibernate-mapping>
