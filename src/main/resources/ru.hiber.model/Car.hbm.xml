<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.hiber.car">

    <class name="ru.hiber.models.Car" table="Cars">
        <id name="id" column="CAR_ID" type="int">
            <generator class="increment"/>
        </id>
        <property name="model" column="MODEL" type="java.lang.String"/>

        <many-to-one name="engine" column="ENGINE_ID" class="ru.hiber.models.Engine" />

        <set name="owners" table="History" lazy="true" fetch="select">
            <key column="car_id" not-null="true"/>
            <many-to-many entity-name="ru.hiber.models.Driver">
                <column name="driver_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>

</hibernate-mapping>
